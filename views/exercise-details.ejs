
<div class="even-spacing">
    <h4>Exercise details</h4>
    <a class="btn btn-outline-dark" href="/exercise/list">Go back</a>
</div>

<div class="panel panel-default panel-body mt-3">
    <form method="post" action="/exercise/save">
        <input type="hidden" id="id" name="id" value="<%= exercise.id %>">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" value="<%= exercise.name %>" id="name" name="name" >
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= exercise.description %></textarea>
        </div>
        <div class="form-group">
          <label for="repetitions">Repetitions</label>
          <input type="number" class="form-control col-lg-3 col-md-5 col-sm-6" id="repetitions" value="<%= exercise.repetitions %>" name="repetitions" placeholder="Number of repetitions">
        </div>
        <div class="form-group">
          <label for="sets">Sets</label>
          <input type="number" class="form-control col-lg-3 col-md-5 col-sm-6" id="sets" value="<%= exercise.sets %>" name="sets" placeholder="Number of sets">
        </div>
        <input type="submit" value="Save" class="btn btn-success"></input>
      </form>
</div>

